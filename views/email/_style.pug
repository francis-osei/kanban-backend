
style.

    *,
    *::before,
    *::after {
        margin: 0;
        padding: 0;
    }

    body {
        height: 100dvh;
    }

    table,
    td,
    div,
    h1,
    p {
        font-family: "Plus Jakarta Sans", sans-serif;
    }
    table,
    tbody,
    tr,
    td {
        border: none !important;
    }

    .mb-38 {
        margin-bottom: 38px;
    }

    .ptb-50{
        padding: 50px 0;
    }

    .pb-47{
    padding-bottom: 47.78px;
    }

    .py-30{
       padding: 30px 0; 
    }

    .pb-30{
        padding-bottom: 30px;
    }

    .pb-34{
        padding-bottom: 34.44px;
    }

    .pd-17{
        padding-bottom: 17.22px;
    }

    .pd-15{
        padding-bottom: 15px;
    }
    .bold{
        font-weight: 700;
    }

    .paragraph {
        color: #3e3f4e;
        font-family: "Plus Jakarta Sans", sans-serif;
        font-size: 13px;
        font-style: normal;
        font-weight: 500;
        line-height: 23px;
    }

    .paragraph-small {
        color: #667085;
        font-family: "Plus Jakarta Sans", sans-serif;
        font-size: 10.987px;
        font-style: normal;
        font-weight: 500;
        line-height: 19.438px;
    }

    .btn {
        text-decoration: none;
        display: block;

        max-width: 316px;
        padding: 8px;
        border: none;
        border-radius: 20px;
        background-color: #635fc7;
        color: #fff !important;
        text-align: center;
        font-family: "Plus Jakarta Sans", sans-serif;
        font-size: 13px;
        font-style: normal;
        font-weight: 700;
        line-height: 23px;
    }

    .email,
    .link {
        color: #635fc7;
    }



    .main {
        width: 100%;
        height: 100%;
        border-collapse: collapse;
        border: 0;
        border-spacing: 0;
        background: #e4ebfa;
    }

    .message-container {
        max-width: 461px;
        border-collapse: collapse;
        border-spacing: 0;
        text-align: left;
    }

    .message-content {
        display: block;
        border-radius: 8px;
        background-color: #fff;
        padding: 40px;
    }

    .message-email {
        width: 100%;
        border-collapse: collapse;
        border: 0;
        border-spacing: 0;
    }

    .btn-box {
        padding-bottom: 38px;
        max-width: 316px;
    }

    @media only screen and (max-width: 490px) {
        .x-small-d {
            margin: 20px 15px;
        }
    }
